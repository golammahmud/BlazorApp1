
@inherits DisplayEmployeeBase;


<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <input type="checkbox" checked="@IsSelected" @onchange="CheckBoxChanged" />
        <h3>@Employee.FirstName @Employee.LastName</h3>
    </div>
   <img class="card-img-top imageThumbnail" src="https://i.pinimg.com/236x/aa/42/7a/aa427a67d5dc8bc31629fbe50cc62abd.jpg" />
    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" 
               class="btn btn-primary m-1">View</a>

            <a href="@($"/editemployee/{Employee.EmployeeId}")" class="btn btn-info m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }
</div>




